<% breadcrumb :character, @story, @character %>
<div class="px-4 sm:px-6 lg:px-8 py-8">
  <div class="max-w-screen-xl mx-auto">
    <h1 class="text-center text-3xl md:text-4xl font-bold tracking-tight mt-12 mb-14">キャラクターを確認しよう！</h1>

    <%= render 'characters/details/action_buttons', story: @story, character: @character %>

    <%= render 'characters/details/character_info_card', story: @story, character: @character %>
    
    <div class="text-center mt-12">
      <%= link_to "キャラクター一覧に戻る", story_characters_path(@story), class: "border border-gray-400 px-6 py-3 rounded-md font-semibold hover:bg-gray-100 transition-colors duration-300" %>
    </div>
  </div>
</div>
