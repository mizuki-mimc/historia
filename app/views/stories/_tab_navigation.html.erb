<% active_class = "text-black whitespace-nowrap py-4 px-1 font-semibold text-lg md:border-black md:border-b-2" %>
<% inactive_class = "text-gray-500 hover:text-gray-700 whitespace-nowrap py-4 px-1 font-semibold text-lg md:border-transparent md:hover:border-gray-400 md:border-b-2" %>

<div class="mb-12">
  <div>
    <nav class="-mb-px flex justify-center space-x-8 overflow-x-auto" aria-label="Tabs">
      
      <%# controller_nameが"stories"の時だけアクティブにする %>
      <%= link_to "ストーリー", story_path(@story), 
            class: (controller_name == 'stories' ? active_class : inactive_class) %>

      <%# controller_nameが"world_guides"の時だけアクティブにする %>
      <%= link_to "ワールドガイド", story_world_guides_path(@story), 
            class: (controller_name == 'world_guides' ? active_class : inactive_class) %>
      
      <%# controller_nameが"characters"の時だけアクティブにする %>
      <%= link_to "キャラクター", story_characters_path(@story),
            class: (controller_name == 'characters' ? active_class : inactive_class) %>

      <%# controller_nameが"flags"の時だけアクティブにする %>
      <%= link_to "フラグ", story_flags_path(@story),
            class: (controller_name == 'flags' ? active_class : inactive_class) %>
            
    </nav>
  </div>
</div>
