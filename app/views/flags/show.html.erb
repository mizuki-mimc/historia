<% breadcrumb :flag, @story, @flag %>
<div class="px-4 sm:px-6 lg:px-8 py-8">
  <div class="max-w-screen-xl mx-auto">
    <h1 class="text-center text-4xl font-bold tracking-tight mt-12 mb-14">フラグを確認しよう！</h1>

    <%= render 'flags/details/action_buttons', story: @story, flag: @flag %>

    <%= render 'flags/details/flag_info_card', flag: @flag %>
    
    <div class="text-center mt-12">
      <%= link_to "フラグ一覧に戻る", story_flags_path(@story), class: "border border-gray-400 px-6 py-3 rounded-md font-semibold hover:bg-gray-100 transition-colors duration-300" %>
    </div>
  </div>
</div>
