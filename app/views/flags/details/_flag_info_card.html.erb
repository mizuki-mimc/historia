<div class="max-w-3xl mx-auto space-y-6 border-2 border-gray-300 p-8 rounded-lg bg-white shadow">
  <div>
    <p class="font-bold">【フラグタイトル】</p>
    <p class="text-xl ml-4 mt-2"><%= @flag.title %></p>
  </div>
  <div>
    <p class="font-bold">【内容】</p>
    <div class="text-lg ml-4 mt-2 prose max-w-none">
      <%= simple_format(@flag.content.presence || "未設定") %>
    </div>
  </div>
  <div>
    <p class="font-bold">【状態】</p>
    <div class="ml-4 mt-4">
      <span class="inline-block px-4 py-2 text-base font-semibold border rounded-full <%= @flag.status_color_class %>">
        <%= @flag.status_display %>
      </span>
    </div>
  </div>
</div>
