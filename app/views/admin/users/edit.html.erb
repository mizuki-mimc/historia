<div class="flex flex-col items-center min-h-screen py-20">
  <h1 class="text-3xl font-bold mb-8">ユーザー編集</h1>
  <div class="p-6 bg-white border rounded-lg shadow max-w-lg">
    <%= form_with model: [:admin, @user], local: true do |f| %>
      <div class="mb-6">
        <p class="font-bold text-sm text-gray-600 mb-1">名前</p>
        <p><%= @user.name %></p>
      </div>
      <div class="mb-6">
        <p class="font-bold text-sm text-gray-600 mb-1">メールアドレス</p>
        <p><%= @user.email %></p>
      </div>

      <div class="mb-6">
        <p class="font-bold text-sm text-gray-600 mb-2">権限</p>
        <div class="flex items-center space-x-4">
          <div class="flex items-center">
            <%= f.radio_button :admin, false, class: "h-4 w-4 text-blue-600 border-gray-300 focus:ring-blue-500" %>
            <%= f.label :admin_false, "一般", class: "ml-2 block text-sm text-gray-900" %>
          </div>
          <div class="flex items-center">
            <%= f.radio_button :admin, true, class: "h-4 w-4 text-red-600 border-gray-300 focus:ring-red-500" %>
            <%= f.label :admin_true, "管理者", class: "ml-2 block text-sm text-gray-900" %>
          </div>
        </div>
      </div>

      <div class="flex justify-end gap-8">
        <%= link_to '戻る', admin_users_path, class: 'inline-block px-4 py-2 text-gray-600 border border-gray-300 rounded-lg hover:bg-gray-100' %>
        <%= f.submit "更新する", class: "px-4 py-2 text-white bg-blue-600 rounded-lg hover:bg-blue-700 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
