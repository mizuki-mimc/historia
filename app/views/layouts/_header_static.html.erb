<header class="relative flex justify-between items-center px-4 md:px-8 py-4 border-b border-gray-200 bg-white shadow-sm sticky top-0 z-50">

  <div class="flex-shrink-0">
    <%= link_to root_path do %>
      <%= image_tag "logo.png", alt: "Historia", class: "w-24" %>
    <% end %>
  </div>

  <nav class="flex items-center space-x-4">
    <button data-controller="back-button" data-action="click->back-button#goBack" class="border border-gray-400 px-4 py-2 rounded-md font-semibold bg-white hover:bg-gray-100">
      前のページに戻る
    </button>
    <%= link_to "ホームに戻る", root_path, class:"border border-gray-400 px-4 py-2 rounded-md font-semibold bg-white hover:bg-gray-100" %>
  </nav>
</header>
